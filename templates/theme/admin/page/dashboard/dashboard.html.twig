{% extends 'theme/admin/base.html.twig' %}

{% block title %}Twitthor - Dashboard{% endblock %}

{% block body %}
  <div class="title-wrapper pt-30">
    <div class="row align-items-center">

      <div class="row align-items-center">
        <div class="col-md-6">
          <div class="title mb-30">
            <h2>Cards</h2>
          </div>
        </div>
      </div>

      <div class="cards-styles">
        <div class="row">

          {% if rows.getTotalItemCount == 0 %}
            <p class="text-sm mb-20">
              Zero data...
            </p>
          {% else %}
            {% for row in rows %}
              <div class="col-1">
                <div class="card-style-2 mb-30">

                  <div class="card-image">
                    <div class="lead-image">
                      <img src="{{ app.request.schemeAndHttpHost ~ row.avatar }}" class="rounded-circle mb-3" title="Go to : {{ row.twName }}" alt="Twitter Avatar">
                    </div>
                    <div class="text">
                      <p class="text-sm text-medium">
                        <p>{{ row.twName|slice(0, 20) ~ '...' }}</p>
                      </p>
                    </div>
                  </div>

                </div>
              </div>
            {% endfor %}
          {% endif %}
        </div>
      </div>

    </div>
  </div>
{% endblock %}
