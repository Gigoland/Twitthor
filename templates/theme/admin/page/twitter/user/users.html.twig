{% extends 'theme/admin/base.html.twig' %}

{% block title %}Twitthor - Twitter Users{% endblock %}

{% block body %}
  {% include 'theme/admin/common/_title_wraper.html.twig' with {
    'title': 'Twitter Users',
    'actions': [
      {'title': 'Add Twitter new user', 'icon': 'fa-plus', 'path': path('app_twitter_user_add')},
    ],
    'navs': [
      {'title': 'Twitter users', 'path': path('app_twitter_users')},
    ]
  } %}

  <div class="tables-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <div class="card-style mb-30">
          <h6 class="mb-10">Data Table</h6>

          {% if twUsers.getTotalItemCount == 0 %}
            <p class="text-sm mb-20">
              Zero data.
            </p>
          {% else %}
            <p class="text-sm mb-20">
              Total: {{ twUsers.getTotalItemCount }} Twitter users found.
            </p>
            <div class="table-wrapper table-responsive">
              <table class="table table-hover-shadow">
                <thead>
                  <tr class="text-nowrap">
                    <th><h6><i class="fa-brands fa-twitter-square"></i> Name</h6></th>
                    <th><h6><i class="fa-brands fa-twitter-square"></i> Usernme</h6></th>
                    <th><h6><i class="fa-brands fa-twitter-square"></i> Url</h6></th>
                    <th><h6><i class="fa-brands fa-twitter-square"></i> ID</h6></th>
                    <th><h6><i class="fa-brands fa-twitter-square"></i> Joined</h6></th>
                    <th><h6><i class="fa-brands fa-twitter-square"></i> Verified</h6></th>
                    <th><h6>Created</h6></th>
                    <th><h6>Updated</h6></th>
                    <th><h6>Edit</h6></th>
                    <th><h6>Delete</h6></th>
                  </tr>
                </thead>
                <tbody>
                  {% for twUser in twUsers %}
                    <tr>
                      <td class="min-width">
                        <div class="lead">
                          <div class="lead-image">
                            <img src="{{ app.request.schemeAndHttpHost ~ twUser.avatar }}" alt="Avatar" title="{{ twUser.twName }}">
                          </div>
                          <div class="lead-text">
                            <p>{{ twUser.twName|slice(0, 20) ~ '...' }}</p>
                          </div>
                        </div>
                      </td>
                      <td class="min-width"><p title="{{ twUser.twUsername }}">@{{ twUser.twUsername|slice(0, 20) ~ '...' }}</p></td>
                      <td class="min-width"><p title="{{ twUser.twUrl }}">{{ twUser.twUrl|slice(0, 20) ~ '...' }}</p></td>
                      <td class="min-width"><p>{{ twUser.twAccountId }}</p></td>
                      <td class="min-width"><p>{{ twUser.twCreatedAt|date('d/m/Y H:i') }}</p></td>
                      <td class="min-width"><p>{{ twUser.twIsVerified ? '<span class="badge bg-info">Yes' : '<span class="badge bg-secondary">No' }}</span></p></td>
                      <td class="min-width"><p>{{ twUser.createAt|date('d/m/Y h:i') }}</p></td>
                      <td class="min-width"><p>{{ twUser.updateAt|date('d/m/Y h:i') }}</p></td>
                      <td>
                        <div class="action">
                          <a href="{{ path('app_twitter_user_edit', {'id': twUser.id}) }}" class="btn btn-secondary">Edit</a>
                        </div>
                      </td>
                      <td>
                        <div class="action">
                          <a href="{{ path('app_twitter_user_delete', {'id': twUser.id}) }}" class="btn btn-danger"><i class="lni lni-trash-can"></i></a>
                        </div>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>

              {# display navigation #}
              <div class="table-pagination navigation d-flex justify-content-center mt-4">
                {{ knp_pagination_render(twUsers) }}
              </div>
            </div>
          {% endif %}

        </div>
      </div>
    </div>
  </div>
{% endblock %}
