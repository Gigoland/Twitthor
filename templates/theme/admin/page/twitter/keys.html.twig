{% extends 'theme/admin/base.html.twig' %}

{% block title %}Twitthor - Twitter{% endblock %}

{% block body %}
  {% include 'theme/admin/common/_title_wraper.html.twig' with {
    'title': 'Twitter API Keys',
    'navs': [
      {'title': 'Twitter API Keys', 'path': path('app_twapi_keys')},
    ]
  } %}

  <div class="tables-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <div class="card-style mb-30">
          <h6 class="mb-10">Data Table</h6>

          {% if apiKeys.getTotalItemCount == 0 %}
            <p class="text-sm mb-20">
              Zero data. | <a href="{{ path('app_twapi_keys_add') }}" class="main-btn primary-btn btn-hover">Add new configuration</a>
            </p>
          {% else %}
            <p class="text-sm mb-20">
              Total: {{ apiKeys.getTotalItemCount }} keys configurations found.
            </p>
            <div class="table-wrapper table-responsive">
              <table class="table table-hover-shadow">
                <thead>
                  <tr class="text-nowrap">
                    <th><h6>CONSUMER KEY</h6></th>
                    <th><h6>CONSUMER SECRET</h6></th>
                    <th><h6>ACCESS TOKEN</h6></th>
                    <th><h6>ACCESS TOKEN SECRET</h6></th>
                    <th><h6>BEARER TOKEN</h6></th>
                    <th><h6>ACCOUNT ID</h6></th>
                    <th><h6>ACCOUNT NAME</h6></th>
                    <th><h6>Edit</h6></th>
                    <th><h6>Delete</h6></th>
                  </tr>
                </thead>
                <tbody>
                  {% for keys in apiKeys %}
                    <tr>
                      <td class="min-width name-title"><p>{{ keys.consumerKey }}</p></td>
                      <td class="min-width"><p>{{ keys.consumerSecret|slice(0, 10) ~ '...' }}</p></td>
                      <td class="min-width"><p>{{ keys.accessToken|slice(0, 10) ~ '...' }}</p></td>
                      <td class="min-width"><p>{{ keys.accessTokenSecret|slice(0, 10) ~ '...' }}</p></td>
                      <td class="min-width"><p>{{ keys.bearerToken|slice(0, 10) ~ '...' }}</p></td>
                      <td class="min-width"><p>{{ keys.accountId|slice(0, 10) ~ '...' }}</p></td>
                      <td class="min-width"><p>{{ keys.accountName|slice(0, 10) ~ '...' }}</p></td>
                      <td>
                        <div class="action">
                          <a href="{{ path('app_twapi_keys_edit', {'id': keys.id}) }}" class="btn btn-secondary">Edit</a>
                        </div>
                      </td>
                      <td>
                        <div class="action">
                          <a href="{{ path('app_twapi_keys_delete', {'id': keys.id}) }}" class="btn btn-danger"><i class="lni lni-trash-can"></i></a>
                        </div>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>

              {# display navigation #}
              <div class="table-pagination navigation d-flex justify-content-center mt-4">
                {{ knp_pagination_render(apiKeys) }}
              </div>
            </div>
          {% endif %}

        </div>
      </div>
    </div>
  </div>
{% endblock %}
