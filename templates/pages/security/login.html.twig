{% extends 'base.html.twig' %}

{% block title %}Twitthor - Login{% endblock %}

{% block header %}{% include 'partials/_header.html.twig' %}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Login or <a href="{{ path('app_security_registration') }}">Registration</a></h1>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('app_security_login') }}" method="post">
            <div class="form-group">
                <label for="username" class="form-label mt-4">Email address</label>
                <input type="email" name="_username" value="{{ last_username }}" id="username" class="form-control" placeholder="email@gmail.com">
            </div>
            <div class="form-group">
                <label for="password" class="form-label mt-4">Password</label>
                <input type="password" name="_password" id="password" class="form-control" placeholder="********">
            </div>

            <button type="submit" class="btn btn-primary mt-4">Login</button>
        </form>

    </div>
{% endblock %}
