{% extends 'base.html.twig' %}

{% block title %}Twitthor - Edit Follow{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Edit Follow</h1>

<div class="form-group">

        <div class="card border-primary mb-3" style="max-width: 20rem;">
            <div class="card-header">Follow info</div>
            <div class="card-body">
                <h4 class="card-title">{{ follow.twUser.twName }}</h4>
                <p class="card-text">
                    <p>Username : @{{ follow.twUser.twUsername }}</p>
                    <p>ID : {{ follow.twUser.twUserId }}</p>
                    <p>Verified : {{ follow.twUser.twIsVerified ? 'Yes' : 'No' }}</p>
                </p>
            </div>
        </div>

        {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.walletEth) }}
                {{ form_widget(form.walletEth) }}
                <div class="form-error">
                    {{ form_errors(form.walletEth) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.walletSol) }}
                {{ form_widget(form.walletSol) }}
                <div class="form-error">
                    {{ form_errors(form.walletSol) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.isFavorite) }}
                {{ form_widget(form.isFavorite) }}
                <div class="form-error">
                    {{ form_errors(form.isFavorite) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>

        {{ form_end(form) }}

    </div>
{% endblock %}
